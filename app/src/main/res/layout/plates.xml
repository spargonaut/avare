<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FF000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <Chronometer
        android:id="@+id/plates_chronometer"
        android:format="%s"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_margin="5dp"
        android:visibility="invisible"/>   
    
    <com.ds.avare.views.PlatesView
        android:background="#FF000000"
        android:id="@+id/plates"
        android:layout_below="@+id/plates_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/plates_button_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".75"
        android:src="@drawable/ic_my_location_white_24dp"
        android:layout_above="@+id/empty_view"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:padding="20dp" />


	    <Button
	        android:id="@+id/plates_button_tag"
	        android:textStyle="bold"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/Tag"
            android:layout_margin="5dp"
	        android:visibility="visible" />

    <ImageButton
        android:id="@+id/plates_button_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".75"
        android:src="@drawable/ic_timer_white_24dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/empty_view"
        android:layout_toLeftOf="@+id/plates_button_center"
        android:padding="20dp" />

    <Button
        android:id="@+id/plates_ticker"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:visibility="invisible"
        android:layout_margin="5dp"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/plates_button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".75"
        android:src="@drawable/ic_settings_white_24dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/empty_view"
        android:layout_toRightOf="@+id/plates_button_center"
        android:padding="20dp" />

    <RelativeLayout
        android:id="@+id/plates_settings"
        android:layout_above="@+id/plates_button_settings"
        android:layout_alignLeft="@id/plates_button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:alpha=".75"
        android:visibility="invisible">
        <fragment android:name="com.ds.avare.fragment.PlatesSettingsFragment"
            android:id="@+id/plates_settings_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>


    <ImageButton
        android:id="@+id/plates_button_draw"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".75"
        android:src="@drawable/ic_gesture_white_24dp"
        android:layout_above="@+id/empty_view"
        android:layout_toRightOf="@+id/plates_button_settings"
        android:layout_marginRight="20dp"
        android:padding="20dp" />

    <ImageButton
        android:id="@+id/plates_button_draw_clear"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".75"
        android:src="@drawable/ic_clear_white_24dp"
        android:layout_above="@+id/empty_view"
        android:layout_toRightOf="@+id/plates_button_draw"
        android:padding="20dp" />
    
    <LinearLayout
        android:baselineAligned="true"
        android:id="@+id/plates_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/plates_button_approach"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="AP"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_weight="4"/>

        <Button
            android:id="@+id/plates_button_plates"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_weight="20" />

        <Button
            android:id="@+id/plates_button_airports"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_weight="6"/>
    </LinearLayout>

    <View
        android:id = "@+id/empty_view"
        android:layout_height = "20dip"
        android:layout_width = "match_parent"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

